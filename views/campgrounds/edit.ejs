<%- include("../partials/header") %>

<div class="container text-center">
	<h1>
	 <em>Edit:</em> <%- campground.name -%>
	</h1>
	
	<div class="row d-flex justify-content-center my-3">
		<div class="col-sm-8 col-lg-4">
			<form action="/campgrounds/<%- campground._id -%>?_method=PUT" method="POST">
			  	<div class="form-group">
					<input type="text" class="form-control" placeholder="name" value="<%- campground.name -%>" name="campground[name]">
			  	</div>
				<div class="form-group">
					<input type="number" class="form-control" placeholder="price" value="<%- campground.price -%>" name="campground[price]" min="0.01" step="0.01">
			  	</div>
			  	<div class="form-group">
					<input type="text" class="form-control" placeholder="image" value="<%- campground.image -%>" name="campground[image]">
			  	</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="description" value="<%- campground.description -%>" name="campground[description]">
			  	</div>
			  	<button type="submit" class="btn btn-primary w-100">Submit</button>
			</form>
			<div class="m-2">
				<a href="/campgrounds/<%- campground.id -%>">Go Back</a>
			</div>
		</div>
	</div>
</div>



<%- include("../partials/footer") %>