<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp</h1>
			<p>
				View our hand-picked campgrounds from all over the world
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/">Landing page</a>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
			</p>
		</div>
	</header>
	
	<div class="row">
		<div class="col-lg-12">
			<h3>
				Our most popular campgrounds
			</h3>
		</div>
	</div>
	
	<div class="row">
		<% campgrounds.forEach(campground => { %>
			<div class="col-lg-3 col-m-6">
				<div class="card my-2 text-center" >
					<img class="card-img-top img-fluid" src="<%-campground.image -%>">
					<div class="card-body">
						<h5 class="card-title"><%- campground.name -%></h5>
						<p class="card-text"><%- campground.description.substring(0, 100); -%>...</p>
						<a href="/campgrounds/<%-campground._id -%>" class="btn btn-primary">More Info</a>
					 </div>
				</div>
			</div>
		<% }) %>
		</div>
	</div>

<%- include("../partials/footer") %>